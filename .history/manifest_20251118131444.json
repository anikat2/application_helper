{
  "manifest_version": 3,
  "name": "Website Data to Sheets",
  "version": "1.0",
  "description": "Append website data to Google Spreadsheet",
  "permissions": [
    "activeTab",
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://sheets.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}