{
  "manifest_version": 3,
  "name": "Internship Helper",
  "version": "1.0",
  "description": "Append internship application data to Google Spreadsheet",
  "permissions": [
    "activeTab",
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://sheets.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}